{
  "family": "steadybit-agent",
  "containerDefinitions": [
    {
      "name": "steadybit-agent",
      "image": "steadybit/agent:latest",
      "cpu": 1024,
      "memory": 512,
      "portMappings": [],
      "essential": true,
      "environment": [
        {
          "name": "STEADYBIT_LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "STEADYBIT_AGENT_KEY",
          "value": "MY-AGENT-KEY"
        },
        {
          "name": "STEADYBIT_AGENT_IDENTIFIER",
          "value": "MY-CLUSTER-NAME"
        },
        {
          "name": "STEADYBIT_AGENT_REGISTER_URL",
          "value": "MY-PLATFORM-URL"
        },
        {
          "name": "STEADYBIT_AGENT_WORKING_DIR",
          "value": "/tmp/steadybit-agent"
        },
        {
          "name": "STEADYBIT_AGENT_STATE_PATH",
          "value": "/tmp/steadybit-agent/state"
        }
      ],
      "mountPoints": [],
      "volumesFrom": [],
      "linuxParameters": {
        "tmpfs": [
          {
            "containerPath": "/tmp",
            "size": 10,
            "mountOptions": [
              "exec"
            ]
          }
        ]
      },
      "readonlyRootFilesystem": false,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/steadybit-agent",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-region": "MY-REGION",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:42899/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      },
      "systemControls": []
    },
    {
      "name": "steadybit-extension-discovery-ecs",
      "image": "ghcr.io/steadybit/extension-discovery-ecs:latest",
      "cpu": 51,
      "memory": 51,
      "portMappings": [],
      "essential": true,
      "environment": [
        {
          "name": "STEADYBIT_LOG_LEVEL",
          "value": "INFO"
        },
        {
          "name": "STEADYBIT_EXTENSION_DISCOVERY_AGENT_KEY",
          "value": "MY-AGENT-KEY"
        },
        {
          "name": "STEADYBIT_EXTENSION_DISCOVERY_ECS_CLUSTER_NAME",
          "value": "MY-CLUSTER-NAME"
        },
        {
          "name": "AWS_REGION",
          "value": "MY-REGION"
        }
      ],
      "environmentFiles": [],
      "mountPoints": [],
      "volumesFrom": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/steadybit-agent",
          "mode": "non-blocking",
          "awslogs-create-group": "true",
          "max-buffer-size": "25m",
          "awslogs-region": "MY-REGION",
          "awslogs-stream-prefix": "ecs"
        },
        "secretOptions": []
      },
      "systemControls": []
    }
  ],
  "taskRoleArn": "arn:aws:iam::MY-ACCOUNT:role/steadybit-agent-task-role",
  "tags": [
    {
      "key": "steadybit.com/discovery-disabled",
      "value": "true"
    }
  ],
  "networkMode": "awsvpc",
  "volumes": [],
  "placementConstraints": [],
  "requiresCompatibilities": [
    "EC2"
  ],
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  }
}